<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="NodeJS By Aminpwa">
    <meta name="author" content="Aminpwa">
    <title>NodeJS By Aminpwa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="css/index.css" rel="stylesheet">
  </head>
  <body>
    <!-- Navigation: Start -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#">NodeJS By Aminpwa</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <%- include('partials/menu', {user: user, page_name: 'home'}); %>
      </div>
    </nav>
    <!-- Navigation: End -->
    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <p class="lead">
            <% if (!user) { %>
              <p class="lead text-muted">You are unauthorized</p>
              <p>
                <a href="login" class="btn btn-primary my-2">login</a>
                <a href="login-2fa" class="btn btn-warning my-2">Two-Factor Authentication Login</a>
                <a href="register" class="btn btn-dark my-2">register</a>
              </p>
            <% } else { %>
              <div class="container mx-auto mt-4">
                <h1>Welcome <%= user.name %>!</h1>
                <form action="?_method=PUT" method="POST">
                  <input type="hidden" name="_method" value="PUT" >
                  <p>Scan the QR Code in the Authenticator app then enter the code that you see in the app in the text field and click Submit.</p>
                  <p><u>Secret Code: <%= joy=user.secrect_token.match(/.{1,4}/g).join(' ') %></u>
                  <button type="submit" class="btn btn-secondary">New Secret</button>
                  </p>
                </form>
                  <img src="<%= qr %>" class="img-fluid" />
                <form action="" method="POST">
                  <div class="mb-3">
                    <label for="code" class="form-label">Before logging out, Please test your phone's code</label>
                    <input type="text" class="form-control" id="code" name="code" required placeholder="Code" >
                  </div>
                  <button type="submit" class="btn btn-info">Test Code</button>
                </form>
              </div>
              <%- include('partials/flash_messages'); %>
            <% } %>
        </p>
        </div>
      </div>
    </section>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
 </body>
</html>
